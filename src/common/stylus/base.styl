@import "variable.styl"

body, html
  font-family 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  font-size $font-size-medium

body
  background $color-background

a
  color inherit

.flex
  display flex

.flex-right
  flex-direction row-reverse

.flex-1
  flex 1

.flex-cloumn
  flex-direction column

.flex-x-center
  justify-content center

.flex-y-center
  align-items center

.just-center
  justify-content space-between

.flex-y-end
  align-items flex-end

.page-w
  width 1100px

.block-center
  margin 0 auto

.shoushi
  cursor pointer

.hover-color:hover
  color $color-main

.tc
  text-align center

.w-100
  width 100%

.h-100
  height 100%

.fl
  float left

.fr
  float right

.clearfix
  zoom 1

.clearfix:after
  content "."
  width 0
  height 0
  visibility hidden
  display block
  clear both
  overflow hidden

.bold
  font-weight bold

//margit
.block-mg
  margin-top 30px

//  清除组件库table样式

table
  tr
    &:nth-child(2n) td
      background $color-table-even!important
    td
      background $color-table-odd!important

.el-table

  .caret-wrapper
    height 35px
  th
    padding 0
    border none
    background $color-table-th
    height 35px
    font-size $font-size-small
    border-bottom none !important
    .cell
      line-height 35px
      font-weight bold
  td
    padding 0
    border none
    .cell
      line-height 35px

