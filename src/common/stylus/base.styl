@import "variable.styl"

body, html
  font-family 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  font-size $font-size-medium

body
  background $color-background
  min-width $page-width
a
  color inherit
*
  box-sizing border-box
.flex
  display flex

.flex-right
  flex-direction row-reverse

.flex-1
  flex 1

.flex-cloumn
  flex-direction column

.flex-x-center
  justify-content center

.flex-y-center
  align-items center

.just-center
  justify-content space-between

.flex-y-end
  align-items flex-end

.page-w
  width 1100px

.block-center
  margin 0 auto

.shoushi
  cursor pointer

.hover-color:hover
  color $color-main

.tc
  text-align center
.tr
  text-align right
.tl
  text-align left
.w-100
  width 100%

.h-100
  height 100%

.fl
  float left

.fr
  float right

.clearfix
  zoom 1

.clearfix:after
  content "."
  width 0
  height 0
  visibility hidden
  display block
  clear both
  overflow hidden

.bold
  font-weight bold
.text-over
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
//每个块 间距 margit
.block-mg
  margin-top 30px
.block-child-mg
  margin-top 10px
.block-child-mg-left
  margin-left 10px
//form表单样式统一
.form-pd
  padding 20px 50px
.form-group
  margin-right 20px
  .form-group-input
    width 200px
  .form-name
    width 100px
    color $color-sup
  .form-group-input-date
    width 310px
    height 30px

//table样式统一
.table-pd
  padding 10px
.table-bg
  background #ffffff
.index-table
  .table-tr
    &:last-of-type
      color red!important

//  清除组件库table样式
.index-table
  tr
    &:nth-child(2n) td
      background $color-table-even!important
    td
      background $color-table-odd!important

.el-table

  .caret-wrapper
    height 35px
  th
    padding 0
    border none
    background $color-table-th
    height 35px
    font-size $font-size-small
    border-bottom none !important
    .cell
      line-height 35px
      font-weight bold
  td
    padding 0
    border none
    .cell
      line-height 35px

